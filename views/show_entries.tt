<div class=page>
    <ul class=entries>
  	<% IF entries.size %>
    	<% FOREACH post IN entries %>
			<div class="well">
      			<li><h2><% post.title %></h2>
	  			<h3><% post.author %></h3>
	  			<% post.text %>
	  		</div>
    	<% END %>
  	<% ELSE %>
    	<li><em>Unbelievable.  No entries here so far</em>
  	<% END %>
  	</ul>
</div>
